.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 20rpx;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.userexecute {
  margin-top: 120px;
  font-family: 黑体;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.intro{
  font-size: 32rpx;
  margin-bottom: 50rpx;
}
.execute{
  margin:18rpx 0;
  width:450rpx;
}